{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'actuality.listing'|trans([],'front') }}{% endblock %}

{% block body %}
    {% include 'includes/banner.html.twig' with {banner_title:'actuality.listing'|trans([],'front')} %}
    <div class="container px-4">
        <div class="row row-cols-1 row-cols-md-5 g-5">
            {% for actuality in actualities %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body p-1">
                            <div class="d-flex flex-column justify-content-between h-100 text-dark">
                                <h3 class="card-title mb-0">
                                    <small>
                                        {{ actuality.title }}
                                    </small>
                                </h3>
                                <p>{{ actuality.resume(100) }}</p>
                                <a href="{{ path('ACTUALITY_DETAIL', {'id': actuality.id}) }}" class="btn btn-sm btn-wikiarchives-accent">
                                    {{ 'actuality.see'|trans([],'front') }}
                                </a>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                {{ actuality.createdAt|date('Y-m-d') }}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
