{% extends 'base-admin.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <div class="container">
        <h1>Picture</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ picture.name }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('ADMIN_CATALOG_PICTURE_INDEX') }}">back to list</a>
        <br>

        <a href="{{ path('ADMIN_CATALOG_PICTURE_EDIT', {'id': picture.id}) }}">edit</a>
        <br>

        <a href="{{ path('ADMIN_CATALOG_PICTURE_TMP_VERSIONS', {'id': picture.id}) }}">{{ picture.tmpVersions|length }}
            modifications en attente
        </a>

        {{ include('catalog/picture/_delete_form.html.twig') }}
    </div>
{% endblock %}
