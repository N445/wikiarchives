{% extends 'base-admin.html.twig' %}

{% block title %}Liste des dossiers - {{ parent() }}{% endblock %}
{% block bodytitle %}Liste des dossiers{% endblock %}

{% block body %}
        <a href="{{ path('ADMIN_CATALOG_CATALOG_NEW') }}" class="btn btn-primary mb-3">
            {{ 'catalog.actions.create'|trans([],'admin') }}
        </a>
        <table class="table table-sm table-bordered">
            <thead>
            <tr>
                <th>{{ 'catalog.properties.name'|trans([],'admin') }}</th>
                <th>{{ 'catalog.properties.parent'|trans([],'admin') }}</th>
                <th>{{ 'catalog.properties.pictures'|trans([],'admin') }}</th>
                <th>{{ 'actions.actions'|trans([],'admin') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for catalog in catalogs %}
                <tr>
                    <td>{{ catalog.name }}</td>
                    <td>{{ catalog.parent }}</td>
                    <td>{{ catalog.pictures|length }}</td>
                    <td>
                        <a href="{{ path('ADMIN_CATALOG_CATALOG_SHOW', {'id': catalog.id}) }}"
                           class="btn btn-sm btn-info">
                            {{ 'actions.see'|trans([],'admin') }}
                        </a>
                        {% if constant('ROOT',catalog) != catalog.name %}
                            <a href="{{ path('ADMIN_CATALOG_CATALOG_EDIT', {'id': catalog.id}) }}"
                               class="btn btn-sm btn-info">
                                {{ 'actions.edit'|trans([],'admin') }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}

