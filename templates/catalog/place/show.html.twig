{% extends 'base-admin.html.twig' %}

{% block title %}Place {{ place.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Place {{ place.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ place.location }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ place.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ place.lng }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('ADMIN_CATALOG_PLACE_INDEX') }}" class="btn btn-primary mb-3">Revenir au listing</a>
        <br>
        <a href="{{ path('ADMIN_CATALOG_PLACE_EDIT', {'id': place.id}) }}" class="btn btn-success mb-3">Modifier</a>
        {{ include('catalog/place/_delete_form.html.twig') }}
    </div>
{% endblock %}
