{% extends 'base-admin.html.twig' %}

{% block title %}Arbor√©scence catalogue - {{ parent() }}{% endblock %}
{% block bodytitle %}Arborescence{% endblock %}

{% block body %}
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
{#                        <button class="btn btn-success btn-sm add-root-catalog mb-3">#}
{#                            Ajouter un dossier racine#}
{#                        </button>#}
                        {% include 'catalog/catalog/includes/_tree-catalog.html.twig' %}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        {% if catalog.id %}
                            {% if 'root' != catalog.name %}
                                <form method="POST"
                                      action="{{ path('AJAX_CATALOG_PICTURE_FILEPOND', {'directoryId': catalog.id}) }}">

{#                                    <select class="select2" name="catalogId">#}
{#                                        {% for catalogSelect in catalogs %}#}
{#                                            <option value="{{ catalogSelect.id }}" {{ catalogSelect.id == catalog.id?'selected':'' }}>{{ catalogSelect.name }}</option>#}
{#                                        {% endfor %}#}
{#                                    </select>#}
                                    <input type="file" class="filepond" name="filepond" data-allow-remove="true">
                                </form>
                            {% endif %}
                            <div class="catalog-content">
                                {% include 'catalog/catalog/includes/_catalog-content.html.twig' %}
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>

    {# new Catalog #}
    <div class="modal fade" id="catalogModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('admin-tree') }}
    {{ encore_entry_link_tags('admin-catalog-datatable') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin-tree-js') }}
    {{ encore_entry_script_tags('admin-catalog-datatable-js') }}
{% endblock %}