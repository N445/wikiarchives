{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2>{{ picture.name }}</h2>
                <img src="{{ vich_uploader_asset(picture) }}" alt="" class="img-fluid">
            </div>
            <div class="col">
                <h2>Exif</h2>
                <table class="table table-sm table-bordered">
                    <tbody>
                    {% for exifRow in picture.exif.rows %}
                        <tr>
                            <th>{{ exifRow.label }}</th>
                            <td>
                                {% if exifRow.type == 'DateTime' %}
                                    {{ exifRow.valueUnserialize|date('Y-m-d H:i:s') }}
                                {% else %}
                                    {{ exifRow.valueUnserialize }}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}