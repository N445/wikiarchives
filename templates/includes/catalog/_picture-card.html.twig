<a href="{{ path('PICTURE', {'catalogId':catalog.id,'id': picture.id}) }}" class="picture-card card shadow-sm h-100" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ picture.name }}">
    <div class="image">
        <img src="{{ picture.file.imageName|imagine_filter('picture_card_listing') }}"
             class="card-img-top rounded"
             alt="{{ picture.name }}"
             loading="lazy">
    </div>
    <div class="card-body p-1">
        <div class="d-flex flex-column justify-content-between h-100">
            <p class="card-title text-truncate mb-0">
                <small>
                    {{ picture.name }}
                </small>
            </p>
        </div>
    </div>
</a>