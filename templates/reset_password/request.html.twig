{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.title'|trans([],'front') }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-dark">
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <h1>{{ 'reset_password.title'|trans([],'front') }}</h1>

                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>{{ 'reset_password.help'|trans([],'front') }}</small>
                        </div>

                        <button class="btn btn-wikiarchives-primary w-100 my-3">{{ 'reset_password.submit'|trans([],'front') }}</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
