{% extends 'base-admin.html.twig' %}

{% block title %}Photo {{ picture.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Photo {{ picture.name }}</h1>
        <div class="row">
            <div class="col-md-6">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ picture.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ picture.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('ADMIN_CATALOG_PICTURE_INDEX') }}" class="btn btn-primary mb-3">Revenir au listing</a>
                <br>

                <a href="{{ path('ADMIN_CATALOG_PICTURE_EDIT', {'id': picture.id}) }}" class="btn btn-success mb-3">Modifier</a>
                <br>

                {{ include('catalog/picture/_delete_form.html.twig') }}
            </div>
            <div class="col-md-6">
                <h2>Versions</h2>
                {% if is_granted('ROLE_MODERATOR') %}
                    <a href="{{ path('ADMIN_MODERATION_PICTURE_TMP_VERSIONS', {'id': picture.id}) }}">
                        {{ picture.tmpVersions|length }} modifications en attente
                    </a>
                {% endif %}
                <table class="table table-sm">
                    <tbody>
                    {% for version in picture.versions %}
                        {% set current = false %}
                        {% if picture.validatedVersion.id == version.id %}
                            {% set current = true %}
                        {% endif %}
                        <tr class="{{ current?'table-success':'' }}">
                            <td>{{ version.id }}</td>
                            <td>{{ version.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ version.status }}</td>
                            <td>{{ version.type }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
