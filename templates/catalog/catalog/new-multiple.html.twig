{% import 'macro/admin/_catalog-actions.html.twig' as catalogMacro %}

{% extends 'base-admin.html.twig' %}

{% block title %}Ajout multiple de photos - {{ parent() }}{% endblock %}
{% block bodytitle %}Ajout multiple de photos{% endblock %}
{% block objecttitle %}{{ catalog.name }}{% endblock %}

{% block body %}
    <div class="btn-group mb-3">
        {{ catalogMacro.catalogActionsButtons(catalog) }}
    </div>
        <form method="POST" action="{{ path('AJAX_CATALOG_PICTURE_FILEPOND', {'catalogId': catalog.id}) }}">
            <input type="file" class="filepond" name="filepond" data-allow-remove="true">
        </form>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('filepond') }}
{% endblock %}

{% block javascripts %}
{#    {{ encore_entry_script_tags('filepond-dynamique-catalogjs') }}#}
    {{ encore_entry_script_tags('filepondjs') }}
{% endblock %}