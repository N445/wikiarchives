{% extends 'base-admin.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Picture</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ picture.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ picture.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('ADMIN_CATALOG_PICTURE_INDEX') }}">back to list</a>
                <br>

                <a href="{{ path('ADMIN_CATALOG_PICTURE_EDIT', {'id': picture.id}) }}">edit</a>
                <br>

                <a href="{{ path('ADMIN_CATALOG_PICTURE_TMP_VERSIONS', {'id': picture.id}) }}">{{ picture.tmpVersions|length }}
                    modifications en attente
                </a>

                {{ include('catalog/picture/_delete_form.html.twig') }}
            </div>
            <div class="col-md-6">
                <h2>Versions</h2>
                <table class="table table-sm">
                    <tbody>
                    <tr>
                        <td>{{ picture.validatedVersion.id }}</td>
                        <td>{{ picture.validatedVersion.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ picture.validatedVersion.status }}</td>
                        <td>{{ picture.validatedVersion.type }}</td>
                    </tr>
                    {% for version in picture.versions %}
                        <tr>
                            <td>{{ version.id }}</td>
                            <td>{{ version.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ version.status }}</td>
                            <td>{{ version.type }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
