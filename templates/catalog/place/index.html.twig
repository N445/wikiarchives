{% extends 'base-admin.html.twig' %}

{% block title %}Liste des zones - {{ parent() }}{% endblock %}
{% block bodytitle %}Liste des zones{% endblock %}

{% block body %}
        <a href="{{ path('ADMIN_CATALOG_PLACE_NEW') }}" class="btn btn-primary mb-3">
            Ajouter une zone
        </a>
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for place in places %}
                <tr>
                    <td>{{ place.name }}</td>
                    <td>{{ place.location }}</td>
                    <td>{{ place.lat }}</td>
                    <td>{{ place.lng }}</td>
                    <td>
                        <a href="{{ path('ADMIN_CATALOG_PLACE_SHOW', {'id': place.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('ADMIN_CATALOG_PLACE_EDIT', {'id': place.id}) }}" class="btn btn-sm btn-info">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'no_records_found'|trans([],'admin') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
