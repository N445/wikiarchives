{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.email) }}
        {{ form_row(form.isVerified) }}
        {{ form_row(form.info.lastname) }}
        {{ form_row(form.info.firstname) }}
        {{ form_row(form.info.country) }}
        {{ form_row(form.info.city) }}
        {{ form_row(form.info.address) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.rights.hasVersionCreator) }}
    </div>
</div>

{{ form_widget(form) }}
<button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}