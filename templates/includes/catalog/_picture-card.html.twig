<div class="catalog-card card shadow-sm h-100">
    <img src="{{ picture.file.imageName|imagine_filter('picture_card_listing') }}" class="card-img-top"
         alt="{{ picture.name }}">

    <div class="card-body p-1">
        <div class="d-flex flex-column justify-content-between h-100">
            <p class="card-title">
                <small>
                    {{ picture.name|truncate(20) }}
                </small>
            </p>
            <a href="{{ path('PICTURE', {'catalogId':picture.catalog.id,'id': picture.id}) }}" class="btn btn-sm w-100 btn-wikiarchives-dark">
                Ouvrir
            </a>
        </div>
    </div>
</div>