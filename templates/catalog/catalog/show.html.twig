{% extends 'base-admin.html.twig' %}

{% block title %}Catalogue {{ catalog.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Catalogue {{ catalog.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ catalog.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ catalog.name }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ catalog.pictures|length }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('ADMIN_CATALOG_CATALOG_INDEX') }}" class="btn btn-primary mb-3">{{ 'actions.back_listing'|trans([],'admin') }}</a>
        {% if constant('ROOT',catalog) != catalog.name %}
            <br>
            <a href="{{ path('ADMIN_CATALOG_CATALOG_EDIT', {'id': catalog.id}) }}"
               class="btn btn-success mb-3">Modifier</a>
            {{ include('catalog/catalog/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
