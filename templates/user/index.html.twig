{% extends 'base-admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
 <div class="container">
     <h1>User index</h1>
     <a href="{{ path('ADMIN_USER_NEW') }}" class="btn btn-primary">Create new</a>
     <table class="table">
         <thead>
         <tr>
             <th>Id</th>
             <th>Email</th>
             <th>IsVerified</th>
             <th>Version creator</th>
             <th>Version validator</th>
             <th>actions</th>
         </tr>
         </thead>
         <tbody>
         {% for user in users %}
             <tr>
                 <td>{{ user.id }}</td>
                 <td>{{ user.email }}</td>
                 <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                 <td>{{ user.rights.hasVersionCreator ? 'Yes' : 'No' }}</td>
                 <td>{{ user.rights.hasVersionValidator ? 'Yes' : 'No' }}</td>
                 <td>
                     <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                     <a href="{{ path('ADMIN_USER_EDIT', {'id': user.id}) }}">edit</a>
                 </td>
             </tr>
         {% else %}
             <tr>
                 <td colspan="6">no records found</td>
             </tr>
         {% endfor %}
         </tbody>
     </table>
 </div>
{% endblock %}
