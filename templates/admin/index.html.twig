{% extends 'base-admin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col"><h2>{{ catalogs|length }} catalogues</h2></div>
            <div class="col"><h2>{{ pictures|length }} photos</h2></div>
            <div class="col"><h2>{{ bytestotal|humanFilesize }} de photos</h2></div>
        </div>
        <h2>{{ versions|length }} versions en attentes de validation</h2>
        <table class="table table-sm table-bordered">
            <thead>
            <tr>
                <th>Photo</th>
                <th>Propos√© le</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for version in versions %}
                <tr>
                    <td>{{ version.tmpPicture.name }}</td>
                    <td>{{ version.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('ADMIN_CATALOG_PICTURE_TMP_VERSIONS_SHOW', {'id': version.tmpPicture.id, 'versionId': version.id}) }}" class="btn btn-sm btn-info">
                            Voir
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
