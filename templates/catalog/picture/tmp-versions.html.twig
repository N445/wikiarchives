{% extends 'base-admin.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <div class="container">
        <h1>Picture</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ picture.name }}</td>
            </tr>
            </tbody>
        </table>

        <table class="table">
            <thead>
            <tr>
                <th>Proposé le</th>
                <th>Proposé par</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for version in picture.tmpVersions %}
                <tr>
                    <td>{{ version.createdAt|date('d/m/Y H:i:s') }}</td>
                    <td>{{ version.createdBy }}</td>
                    <td>
                        <a href="{{ path('ADMIN_CATALOG_PICTURE_TMP_VERSIONS_SHOW', {'id': picture.id, 'versionId': version.id}) }}"
                           class="btn btn-sm btn-info">
                            Voir
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
