{% extends 'base.html.twig' %}

{% macro tablePictures(pictures) %}
    <table class="table table-sm table-bordered table-dark">
        <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.name }}</td>
                <td>{{ picture.name }}</td>
                <td>{{ picture.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}

{% block body %}
    <div class="container">
        <h1>{{ user.userIdentifier }}</h1>
        <div class="row">
            <div class="col-md-6">
                <h2>Infos</h2>
                <table class="table table-sm table-bordered table-dark">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Is Verified</th>
                        <td>{{ user.isVerified|yesNoHtml }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.info.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ user.info.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ user.info.country }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ user.info.city }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ user.info.address }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h2>Versions</h2>

                <table class="table table-sm table-bordered table-dark">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Versions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for picture in pictures %}
                        <tr>
                            <td>{{ picture.picture.name }}</td>
                            <td>
                                <table class="table table-sm table-bordered table-dark">
                                    <tbody>
                                    {% for version in picture.versions %}
                                        <tr>
                                            <td>{{ version.createdAt|date('Y-m-d H:i') }}</td>
                                            <td>{{ version|versionStatusLabel }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
