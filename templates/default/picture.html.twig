{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2>{{ picture.name }}</h2>
                <img src="{{ vich_uploader_asset(picture.file) }}" alt="" class="img-fluid">
            </div>
            <div class="col">
                <a href="{{ path('PICTURE_CHANGE', {'catalogId': picture.catalog.id, 'id': picture.id}) }}">
                    Proposer une modification
                </a>
                {% include 'includes/catalog/_picture-exif.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}